{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ESNext",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ]
}